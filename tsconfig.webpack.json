{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": ["ES2020", "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": { "@/*": ["./src/*"], "@app/*": ["./src/*"] },
        "types": ["webextension-polyfill"]
    },
    "include": [
        "src/content/**/*.ts",
        "src/background/**/*.ts",
        "src/shared/types/**/*.ts"
    ]
}
